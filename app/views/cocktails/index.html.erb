<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= image_path cocktail.photo.url, height: 300, width: 400, crop: :fill %>')">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "card-name" %></h2>
    </div>
  <% end %>
</div>

